 private void newsigninActionPerformed(java.awt.event.ActionEvent evt) {
String uname,pword;
String n=newname.getText();
String a=newaccount.getText();
String b=newpin.getText();
uname=newuser.getText();
pword=newpassword.getText();
if(n.equals("")||uname.equals("")||pword.equals(""))
JOptionPane.showMessageDialog(this,"Some fields are empty "+n);
else
{
user ob=new user(n,a,b,uname,pword);
try
{
useraction.add(ob);
JOptionPane.showMessageDialog(this,"Stored in file");
login l=new login();
l.show();
dispose();
}
catch(Exception e)
{
System.out.println(e);
}
}

